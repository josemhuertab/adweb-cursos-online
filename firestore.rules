rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección de cursos
    match /courses/{courseId} {
      // Permitir lectura a usuarios autenticados
      allow read, list: if request.auth != null;
      
      // Permitir escritura solo a administradores
      allow write: if request.auth != null && 
        request.auth.token.email in ['admin@adweb.cl'];
    }
    
    // Reglas para la colección de inscripciones
    match /enrollments/{enrollmentId} {
      // Permitir todas las operaciones a usuarios autenticados
      // (las validaciones de negocio se manejan en el frontend)
      allow read, write, list: if request.auth != null;
    }
    
    // Reglas para la colección de usuarios
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Reglas para notificaciones
    match /notifications/{notificationId} {
      // Permitir acceso a usuarios autenticados
      // (las validaciones de rol se manejan en el frontend)
      allow read, write, list: if request.auth != null;
    }
  }
}